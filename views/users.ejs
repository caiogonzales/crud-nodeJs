<%- include('header') -%>
<div class="container">
    <h1>Lista de users</h1>
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nome</th>
                <th scope="col">Editar</th>
                <th scope="col">Excluir</th>
            </tr>
        </thead>
        <tbody>
            <% for(var i = 0; i < users.length; i++){ %>
            <tr>
                <th scope="row"><%=users[i].id %></th>
                <td><%= users[i].name %></td>
                <td><a href="/users/<%=users[i].id %>/editar">Editar</a></td>
                <td><a href="/cliente/<%= i %>">Excluir</a></td>
            </tr>
            <% } %>
        </tbody>
    </table>
</div>
<%- include('footer') -%>